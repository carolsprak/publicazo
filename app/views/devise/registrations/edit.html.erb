<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "Editar Perfil", edit_user_registration_path, class: "sidebar-link active" %></li>
    </ul>
    <br/>
    <%= link_to "Meu Perfil", user_path(current_user.id), class: "btn btn-default" %>
  </div>
  <div class="col-md-9 text-center">
    <div class="panel panel-default">
      <div class="panel-heading">Meu Perfil</div>
      <div class="panel-body">
        <div class="container">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render 'shared/devisemes' %>
          <div class="form-group">
            <%= f.text_field :fullname, autofocus: true, placeholder: "Nome Completo", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.text_field :phone_number, autofocus: true, placeholder: "Telefone +55 (99) 99999-9999", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.text_area :description, rows: 5, cols: 25, autofocus: true, placeholder: "Descrição", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, placeholder: "E-mail", class: "form-control" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Aguardando confirmação pelo e-mail: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", placeholder: "Senha (Deixe em branco se não for alterar)", class: "form-control" %>
            <% if @minimum_password_length %>
              <br />
              <em>(mínimo de <%= @minimum_password_length %> caracteres)</em>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirme a Senha", class: "form-control" %>
          </div>
          
          <br/>
          <br/>
          <div class="actions">
            <%= f.submit "Alterar", class: "btn btn-normal btn-block" %>
          </div>
        <% end %>

        <hr/>
        <h2 class="text-center">Remover Conta</h2>

        <p>Caso queira remover a sua conta deste sistema. <%= button_to "Remover Minha Conta",  registration_path(resource_name), data: { confirm: "Todos seus dados serão perdidos. Você tem certeza que deseja remover sua conta?" }, method: :delete, class: "btn btn-normal btn-block" %></p>

        <%= link_to "Voltar", root_path %>
        <br/>
        <br/>
        </div>
      </div>
    </div>
  </div>
</div>


